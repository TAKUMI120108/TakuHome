<!DOCTYPE html>
<html>
  <head>
    <title>TakuHome</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <header>
    <% if customer_signed_in? %>
    <li>
        <%= link_to "Search", new_search_path %>
      </li>
      <li>
        <%= link_to "Post", new_post_path %>
      </li>
      <li>
        <%= link_to "List", post_index_path %>
      </li>
      <li>
        <%= link_to "Calculate", new_calculate_path %>
      </li>
      <li>
        <%= link_to "Log out", destroy_customer_session_path, method: :delete %>
      </li>
    <% else %>
     <li>
        <%= link_to "Home", root_path %>
      </li>
      <li>
        <%= link_to "About", about_path %>
      </li>
      <li>
        <%= link_to "Introduction", introduction_path %>
      </li>
      <li>
        <%= link_to "Sign up", new_customer_registration_path %>
      </li>
      <li>
        <%= link_to "Log in", new_customer_session_path %>
      </li>
    <% end %>
  </header>
    <%= yield %>
  </body>
</html>
