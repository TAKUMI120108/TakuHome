<h1>TakuHome</h1>
<%= form_with model: @post, url: '/search' do |f| %>
  <h4>住所</h4>
  <%= f.text_field :address %>
  
  <h4>コメント</h4>
  <%= f.text_area :comment %>
	
	<h4>評価</h4>
   <% if @post.id.nil? %>
    <div class="form-group row" id="star">
    <%= f.label :star,'評価 ', class:'col-md-3 col-form-label' %>
    <%= f.hidden_field :star, id: :review_star %>
    </div>
    <script>
     　　　　$('#star').empty();
  $('#star').raty({
    size     : 36,
    starOff:  '<%= asset_path('star-off.png') %>',
    starOn : '<%= asset_path('star-on.png') %>',
 　 　　　scoreName: 'post[star]',　
    half: false,
  });
    </script>

  <%= f.submit '完了' %>
<% end %>
<% end %>