<div class="text-center w-auto list-unstyled">
<% if @calculate.errors.any? %>
  <%= @calculate.errors.count %>件のエラーが発生しました
  <ul>
    <% @calculate.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<p>計算数値を入力してください</p> 
<%= form_with model: @calculate, url: calculate_index_path, method: :post do |f| %>
<div class="text-center border list-unstyled p-4 rounded-0 w-auto">
<h3>ユーザー情報</h3>
<p> 
 <%= f.label :手取り %>
 <%= f.number_field :home_pay %>円
</p>
<p><%= f.label :その他支払額 %>
<%= f.number_field :other_payment_amount %>円
</p>
</div>

<div class="text-center border list-unstyled p-4 rounded-0 w-auto">
<h3>希望賃貸情報</h3>
<p> 
 <%= f.label :賃料 %>
 <%= f.number_field :rent %>円
</p>
<p><%= f.label :敷金 %>
<%= f.number_field :security_deposit %>円
</p>
<p><%= f.label :礼金 %>
<%= f.number_field :key_money %>円
</p>
<p><%= f.label :管理費 %>
<%= f.number_field :management_fee %>円
</p>
<p><%= f.label :保証料 %>
<%= f.number_field :guarantee_charge %>円
</p>
</div>
<p> 
<%= f.submit '完了' %>
</p>
<% end %>

<%= link_to "Topへ", calculate_index_path %>
</div>
<%= render 'calculate/template', calculate: @calculate %>

