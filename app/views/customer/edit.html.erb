<h1>TakuHome</h1>
<%= form_with model: @customer do |f| %>
  <label for ="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
  </br>
  <label for = "inputEmail">Email</label>
    <%= f.email_field :email, autofocus: true, id:"inputEmail", placeholder:"email" %>
  </br>
  <label for = "inputPasswaord">Password</label>
    <%= f.text_field :password, autofocus: true, id:"inputPassword", placeholder:"password" %>
    </br>
 <label for = "inputImage">Image</label>
    <%= f.file_field :image, autofocus: true, id:"inputImage", placeholder:"Image" %>
     </br>
  <%= f.submit '完了' %>

<% end %>


